{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "EU Energy Import Dependence",
  "width": 750,
  "height": 500,

  "data": {
    "url": "https://raw.githubusercontent.com/SctMccoll/Week-9-Homework/main/Data/Energy_Dependence_Time.csv"
  },

  "projection": {
    "type": "conicEqualArea",
    "center": [ 18, 47 ],
    "parallels": [ 40, 65 ],
    "scale": 750
  },

  "params": [
    {
      "name": "year",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_ocean"
        }
      },

      "mark": {
        "type": "geoshape",
        "fill": "#E8F0F5"
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },

      "mark": {
        "type": "geoshape",
        "fill": "None",
        "stroke": "lightgray"
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_5"
        }
      },

      "mark": {
        "type": "geoshape",
        "fill": "None",
        "stroke": "lightgray"
      },
      "encoding": {
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],

      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },

    {
      "transform": [
        {
          "lookup": "COUNTRY",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_0_countries"
              }
            },
            "key": "properties.ADM0_A3_BR",
            "fields": [ "properties", "type", "geometry" ]
          }
        },
        { "filter": "datum.YEAR==year" },
        {
          "calculate": "if(datum.PC_DEP!=null,max(datum.PC_DEP/100,-1),null)",
          "as": "Energy Dependence"
        },
        {
          "calculate": "if(datum.PC_DEP!=null,datum.PC_DEP/100,null)",
          "as": "Tooltip Dependence"
        }
      ],

      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Energy Dependence",
          "type": "quantitative",
          "scale": {
            "scheme": "blueorange",
            "type": "linear",
            "domain": [ -1, 1 ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Tooltip Dependence",
            "type": "quantitative",
            "format": ".1%",
            "title": "Dependence"
          }
        ]
      }
    }
  ]
}