{
  "width": 600,
  "height": 500,

  "projection": {
    "type": "conicEqualArea",
    "center": [ 15, 51 ],
    "parallels": [ 40, 65 ],
    "scale": 860
  },

  "data": {
    "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Natural_gas_imports.csv",
    "format": {
      "type": "csv",
      "parse": "auto"
    }
  },

  "params": [
    {
      "name": "year_slider",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],

      "params": [
        {
          "name": "select_country",
          "select": {
            "type": "point",
            "on": "mouseover",
            "fields": [ "datum.properties.NAME" ]
          }
        }
      ],

      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },

      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        { "filter": "datum.from=='TOTAL'" },
        { "filter": "datum.year==year_slider" },
        {
          "lookup": "to",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Country_centers.csv"
            },
            "key": "country",
            "fields": [ "latitude", "longitude" ]
          },
          "as": [ "latitude", "longitude" ]
        }
      ],



      "mark": "circle",
      "encoding": {
        "size": {
          "legend": null,
          "field": "value",
          "type": "quantitative",
          "scale": {
            "domain": [ 0, 5000000 ],
            "range": [ 0, 3000 ]
          }
        },
        "latitude": {
          "field": "latitude"
        },
        "longitude": {
          "field": "longitude"
        }
      },
      "tooltip": [
        {
          "field": "to",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "value",
          "type": "quantitative",
          "format": ".1%",
          "title": "Dependence"
        }
      ]
    },
    {

      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        { "filter": "datum.from!='TOTAL'" },
        { "filter": "datum.year==year_slider" },
        {
          "lookup": "from",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Country_centers.csv"
            },
            "key": "country",
            "fields": [ "latitude", "longitude" ]
          },
          "as": [ "origin_latitude", "origin_longitude" ]
        },
        {
          "lookup": "to",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Country_centers.csv"
            },
            "key": "country",
            "fields": [ "latitude", "longitude" ]
          },
          "as": [ "dest_latitude", "dest_longitude" ]
        }
      ],

      "mark": "rule",
      "encoding": {
        "strokeWidth": {
          "field": "value",
          "legend": null,
          "scale": { "range": [ 1, 5 ] }
        },
        "longitude": {
          "field": "origin_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "origin_latitude",
          "type": "quantitative"
        },
        "longitude2": { "field": "dest_longitude" },
        "latitude2": { "field": "dest_latitude" }
      }
    }
  ]
}
