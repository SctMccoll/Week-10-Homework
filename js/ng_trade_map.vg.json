{
  "height": 800,
  "width": 1200,

  "projection": {
    "type": "conicEqualArea",
    "center": [ 15, 51 ],
    "parallels": [ 40, 65 ],
    "scale": 860
  },

  "data": {
    "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Natural_gas_imports.csv",
    "format": {
      "type": "csv",
      "parse": "auto"
    }
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "projection": {
        "type": "conicEqualArea",
        "center": [ 15, 51 ],
        "parallels": [ 40, 65 ],
        "scale": 860
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Country_centers.csv"
      },

      "mark": "circle",
      "tooltip": [
        {
          "text": "country"
        }
      ],
      "encoding": {
        "latitude": {
          "field": "latitude"
        },
        "longitude": {
          "field": "longitude"
        },

        "size": { "value": 1000 }
      },
      "config": {
        "view": {
          "stroke": "transparent"
        }
      }
    },
    {

      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        { "filter": "datum.to=='DEU'" },
        { "filter": "datum.year==2000" },
        {
          "lookup": "from",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Country_centers.csv"
            },
            "key": "country",
            "fields": [ "latitude", "longitude" ]
          },
          "as": [ "origin_latitude", "origin_longitude" ]
        },
        {
          "lookup": "to",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/Week-10-Homework/main/Data/Country_centers.csv"
            },
            "key": "country",
            "fields": [ "latitude", "longitude" ]
          },
          "as": [ "dest_latitude", "dest_longitude" ]
        }
      ],
      "mark": "rule",
      "encoding": {
        "longitude": {
          "field": "origin_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "origin_latitude",
          "type": "quantitative"
        },
        "longitude2": { "field": "dest_longitude" },
        "latitude2": { "field": "dest_latitude" }
      }
    }
  ]
}
